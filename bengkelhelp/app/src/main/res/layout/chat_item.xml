<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Pesan kiri (dari lawan bicara) -->
    <TextView
        android:id="@+id/tvLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:background="@drawable/bg_bubble_left"
        android:padding="12dp"
        android:text="Pesan dari orang lain"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- Pesan kanan (dari user sendiri) -->
    <TextView
        android:id="@+id/tvRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:background="@drawable/bg_bubble_right"
        android:padding="12dp"
        android:text="Pesan dari saya"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</LinearLayout>
